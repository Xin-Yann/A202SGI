<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="15dp">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/account"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#030F51"
            android:gravity="center"
            android:text="Account"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="170dp"
            tools:layout_editor_absoluteY="16dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="17dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="-35dp"
            app:srcCompat="@drawable/left_arrow_white" />

        <ImageView
            android:id="@+id/account1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="175dp"
            android:layout_marginTop="55dp"
            app:srcCompat="@drawable/account" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="20dp"
            android:gravity="top"
            android:text="Username"
            android:textColor="#000000"
            android:textSize="21sp" />

<!--        <EditText-->
<!--            android:id="@+id/nameInput"-->
<!--            android:layout_width="313dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginStart="50dp"-->
<!--            android:layout_marginTop="120dp"-->
<!--            android:inputType="textPersonName"-->
<!--            android:text="My Profile"-->
<!--            android:textSize="20sp"-->
<!--            android:layout_below="@+id/linearLayout2"/>-->

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="50dp"
            android:gravity="top"
            android:text="My Profile"
            android:textColor="#000000"
            android:textSize="21sp" />

        <ImageView
            android:id="@+id/line_7"
            android:layout_width="308dp"
            android:layout_height="2dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/line_7" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="40dp"
            android:gravity="top"
            android:text="Special Registration"
            android:textColor="#000000"
            android:textSize="21sp" />

        <ImageView
            android:id="@+id/line_7two"
            android:layout_width="308dp"
            android:layout_height="2dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/line_7" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="40dp"
            android:gravity="top"
            android:text="Log Out"
            android:textColor="#000000"
            android:textSize="21sp" />

        <ImageView
            android:id="@+id/line_7three"
            android:layout_width="308dp"
            android:layout_height="2dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/line_7" />



    </LinearLayout>

</RelativeLayout>