                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/Ticket_Type2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="120dp"
