<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/paymentheader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:background="#040f51"
            android:padding="15dp"
            android:text="Account"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="17dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/left_arrow_white" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="top">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_above="@id/footer"
            android:layout_below="@id/paymentheader">

            <ImageView
                android:id="@+id/account1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="185dp"
                android:layout_marginTop="40dp"
                app:srcCompat="@drawable/user" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="165dp"
                android:layout_marginTop="120dp"
                android:gravity="top"
                android:text="Username"
                android:textColor="#000000"
                android:textSize="21sp" />

            <View
                android:id="@+id/imageView6"
                android:layout_width="355dp"
                android:layout_height="440dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="175dp"
                android:background="#f2f2f2"
                app:srcCompat="@drawable/rectangle_10" />

            <TextView
                android:id="@+id/special_registration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="75dp"
                android:layout_marginTop="190dp"
                android:gravity="top"
                android:text="Special Registration"
                android:textColor="#000000"
                android:textSize="18sp" />

            <Button
                android:id="@+id/special_registration_button"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="75dp"
                android:layout_marginTop="225dp"
                android:text="MyRailLife OKU"
                android:textColor="#000000"
                android:textSize="18sp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableRight="@drawable/polygon_1"
                android:drawablePadding="8dp"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="75dp"
                android:layout_marginTop="280dp"
                android:textColor="#000000"
                android:textSize="16sp"
                android:hint="OKU Card Number"
                app:hintEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputOKUCardNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="75dp"
                android:layout_marginTop="340dp"
                android:textColor="#000000"
                android:textSize="16sp"
                android:hint="Birth Date"
                app:hintEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputBirthDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/attachment"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="400dp"
                android:gravity="top"
                android:text="Attachment:"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="420dp"
                android:gravity="top"
                android:text="1.MyKad"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/content2"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="440dp"
                android:gravity="top"
                android:text="2.Kad Kebajikan Masyarakat (Kad OKU)"
                android:textColor="#000000"
                android:textSize="15sp" />

            <Button
                android:id="@+id/button"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:backgroundTint="#030F51"
                android:text="Upload Requirement Documents"
                android:textSize="16dp"
                android:textAlignment="textEnd"
                tools:layout_editor_absoluteX="101dp"
                tools:layout_editor_absoluteY="528dp"
                android:layout_marginTop="480dp"
                android:layout_marginStart="60dp" />

            <ImageView
                android:id="@+id/upload1"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="495dp"
                app:srcCompat="@drawable/upload_1" />

            <Button
                android:id="@+id/submit"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:backgroundTint="#030F51"
                android:text="Submit"
                android:textSize="16dp"
                android:textAlignment="center"
                android:layout_marginTop="535dp"
                android:layout_marginStart="160dp" />
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FEFAFD"
        android:gravity="center_horizontal"
        android:elevation="50dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginLeft="60dp">

            <ImageButton
                android:id="@+id/image1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="#ffff"
                android:contentDescription="Image1"
                android:onClick="clickImage1"
                android:padding="5dp"
                app:srcCompat="@drawable/home"
                android:layout_marginRight="88dp"
                android:layout_marginStart="-11dp"
                android:layout_marginTop="-10dp"/>

            <ImageButton
                android:id="@+id/image2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="#ffffff"
                android:onClick="clickImage2"
                app:srcCompat="@drawable/ticket"
                android:layout_marginRight="95dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="-10dp"
                android:contentDescription="My Ticket"/>

            <ImageButton
                android:id="@+id/image3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="#ffffff"
                android:onClick="clickImage3"
                android:padding="5dp"
                app:srcCompat="@drawable/account"
                android:contentDescription="Account"
                android:layout_marginStart="-15dp"
                android:layout_marginTop="-10dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal">


            <TextView
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="Home"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginRight="62dp"/>

            <TextView
                android:id="@+id/myTicket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="My Ticket"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginRight="70dp"
                android:layout_marginLeft="18dp"/>

            <TextView
                android:id="@+id/account2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="Account"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>